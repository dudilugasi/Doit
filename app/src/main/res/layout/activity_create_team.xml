<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.CreateTeamActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/create_team_text"
        android:paddingBottom="15dp"
        android:id="@+id/create_team"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:paddingLeft="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/create_team"
        android:background="#ffffff"
        android:id="@+id/create_team_layout">

        <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/team_name_input"
            android:hint="@string/team_name_text"
            android:paddingTop="25dp"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/members"
            android:id="@+id/members_text"
            android:layout_below="@+id/team_name_input"
            android:layout_alignLeft="@+id/team_name_input"
            android:layout_alignStart="@+id/team_name_input"
            android:layout_marginTop="30dp"
            android:textSize="25sp" />

        <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/mamber_name_input"
            android:layout_below="@+id/members_text"
            android:layout_alignLeft="@+id/members_text"
            android:layout_alignStart="@+id/members_text"
            android:hint="@string/member_name"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/member_phone_input"
            android:layout_below="@+id/mamber_name_input"
            android:layout_alignLeft="@+id/members_text"
            android:layout_alignStart="@+id/members_text"
            android:layout_marginTop="46dp"
            android:hint="@string/memeber_phone" />

        <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/member_mail_input"
            android:layout_below="@+id/mamber_name_input"
            android:layout_alignLeft="@+id/member_phone_input"
            android:layout_alignStart="@+id/member_phone_input"
            android:hint="@string/member_mail" />

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/plus_buttun"
            android:layout_below="@+id/member_phone_input"
            android:layout_alignLeft="@+id/member_phone_input"
            android:layout_alignStart="@+id/member_phone_input"
            android:background="@drawable/plus_icon" />

        <Button
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:text="@string/send"
            android:id="@+id/send_button"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:layout_below="@+id/plus_buttun"
            android:layout_centerHorizontal="true"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1"
            android:id="@+id/member_num"
            android:layout_above="@+id/mamber_name_input"
            android:layout_toRightOf="@+id/members_text"
            android:layout_toEndOf="@+id/members_text" />
    </RelativeLayout>

</RelativeLayout>
